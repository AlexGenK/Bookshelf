<%= form_for author do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :bio %>
		<%= f.text_area :bio, rows: 3,  class: "form-control" %><br>
	</div>
	<%= f.submit class: "btn btn-primary" %>
<% end %>