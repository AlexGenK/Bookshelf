<%= form_for book, html: { multipart: true } do |f| %>
	<%= f.label :cover %><br>
	<%= image_tag book.cover.url(:medium) %><br>
	<%= f.file_field :cover %><br>
	<%= hidden_field_tag "book[author_ids][]", nil %>
  	<%= label_tag "book[author_ids][]", "Автор:" %>
	<%= select_tag "book[author_ids][]", options_from_collection_for_select(Author.all, "id", "name", book.authors.collect(&:id)), multiple: true, class: 'selectpicker', data: { 'live-search' => 'true' } %><br>
  	<%= f.label :title %>
	<%= f.text_field :title %><br>
	<%= f.label :description %>
	<%= f.text_field :description %><br>
	<%= f.submit %>
<% end %>