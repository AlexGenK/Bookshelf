<h2>Index of books</h2>

<%= link_to 'New book', new_book_path %>

<% @books.each do |item| %>
	<h3><%= item.title %></h3>
	<h4>Authors: <%= item.authors.map(&:name).join(', ') %></h4>
	<%= image_tag item.cover.url(:medium) %>
	<p><%= item.description %></p>
	<%= link_to 'DEL', item, method: :delete, data: { confirm: 'Are you sure?' } %> | 
	<%= link_to 'EDIT', edit_book_path(item) %>
	<hr>
<% end %>