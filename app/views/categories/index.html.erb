<h4>Index of categories</h4>

<%= form_for @category do |f| %>
	<div class="form-group row">
		<%= f.label :name, 'Category name:', class: "col-sm-2 col-form-label" %>
		<div class="col-sm-4">
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<%= f.submit class: "btn btn-outline-primary col-sm-2" %>
	</div>
<% end %>

<ul class="list-group">
<% @categories.each do |item| %>
	<% books_count = item.books.count %>
	<li class="list-group-item category">
		<%= link_to item.name, item %><span class="badge badge-light"><%= "#{books_count} books" %></span>
		<%= link_to 'Delete', item, method: :delete, class: "btn btn-danger float-right #{books_count==0 ? '' : 'disabled'}", data: { confirm: 'Are you sure?' } %>
	</li>
<% end %>
</ul>