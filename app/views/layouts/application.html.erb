<!DOCTYPE html>
<html>
  <head>
    <title>Bookshelf</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<% if flash[:alert] %>
		<%= flash[:alert] %>
	<% end %>
	<% if flash[:notice] %>
		<%= flash[:notice] %>
	<% end %>

    <%= yield %>
  </body>
</html>
