<table class="table">
	<thead>
		<tr>
			<th>Username</th>
			<th>Roles</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%= user.username %></td>
			<td>
			<%= form_for user do |f| %>
				<%= label_tag 'Superadmin: ' %>
				<%= f.check_box :superadmin_role %>
				<%= label_tag 'Books admin: ' %>
				<%= f.check_box :admin_books_role %>
				<%= label_tag 'Cat. admin: ' %>
				<%= f.check_box :admin_categories_role %>
				<%= f.submit 'Update' %>
			<% end %>
			</td>
			<td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
	</tbody>
</table>
